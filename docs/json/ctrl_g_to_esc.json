{
    "title": "Emacs Mode",
    "rules": [
        {
            "description": "Change Left_control + g to Escape",
            "manipulators": [
                {
                    "from": {
                        "key_code": "g",
                        "modifiers": {
                            "mandatory": ["left_control"],
                            "optional": ["any"]
                        }
                    },
                    "to": [{"key_code": "escape"}],
                    "type": "basic"
                }
            ]
        }
    ]
}
